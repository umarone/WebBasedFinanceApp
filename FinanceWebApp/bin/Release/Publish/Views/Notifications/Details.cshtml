@model MudasirRehmanAlp.Models.Notification

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime TodayDate = DateTime.Now;
}
<div class="alert alert-warning">
    <em class="fa fa-exclamation-circle fa-lg fa-fw"></em> This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Notification
        <small class="pull-right">  Date: @{@TodayDate}  <i class="fa fa-globe"></i></small>
    </div>
    <div class="panel-body">
        <div class="row ">
            <div class="col-sm-4 ">
                <label>Type: </label>
                <span>@{ @Model.Type.ToString()} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Priority: </label>
                <span> @{ @Model.Priority.ToString()}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Title: </label>
                <span>@{ @Model.Title} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Description: </label>
                <span> @{ @Model.Description}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Organization Name: </label>
                <span>
                    @{ if (Model.OrganizationId != null)
                        {
                            @Model.OrganizationDefinition.OrganizationUnitName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Branch Name: </label>
                <span>
                    @{ if (Model.BranchId != null)
                        {
                            @Model.BranchDefinition.Name
                        }
                    }
                </span>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <a href="@Url.Action("Print", "Notifications",new {id=Model.Id })" target="_blank" class="btn btn-info"><i class="fa fa-print"></i> Print</a>

                <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
                    <i class="fa fa-download"></i> Generate PDF
                </button>
                <a href="@Url.Action("Index")" title="Back to List" class="btn btn-default">Back to List &nbsp;<em class="fa fa-backward"></em></a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>