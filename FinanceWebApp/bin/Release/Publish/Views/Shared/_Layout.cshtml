<!DOCTYPE html>
<html lang="en">
@{
    string title = Convert.ToString(Session["OrganizationTitle"]);
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="@title">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>
        @title
    </title>
    <!-- =============== VENDOR STYLES ===============-->
    @Styles.Render("~/bundles/fontawesome")
    @Styles.Render("~/bundles/simpleLineIcons")
    @Styles.Render("~/bundles/animatecss")
    @Styles.Render("~/bundles/whirl")
    @Styles.Render("~/bundles/toastrCss")
    @Styles.Render("~/bundles/CommonCss")
    @Styles.Render("~/bundles/SweetAlertCss")
    @Styles.Render("~/bundles/datatablesCss")
    @Styles.Render("~/bundles/select2Css")
    @Styles.Render("~/bundles/Spinkit")
    @Styles.Render("~/bundles/LoadersCss")
    @Styles.Render("~/bundles/autocompleteCss")
    <!-- =============== PAGE VENDOR STYLES =============== -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}
    <!-- =============== BOOTSTRAP STYLES ===============-->
    <link href="@Styles.Url("~/Content/app/css/bootstrap.css")" rel="stylesheet" type="text/css" id="bscss" />
    <!-- =============== APP STYLES ===============-->
    <link href="@Styles.Url("~/Content/app/css/app.css")" rel="stylesheet" type="text/css" id="maincss" />
    <link href="@Styles.Url("~/Content/mvc-override.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="loaderfullApp clsLoader" style="display:none">
        <div class="ball-clip-rotate-pulse">
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="wrapper clswrapperForLoader">
        <!-- top navbar-->
        <header class="topnavbar-wrapper">
            @Html.Partial("_TopNavbar")
        </header>
        <!-- sidebar-->
        <aside class="aside">
            @Html.Partial("_Sidebar")
        </aside>
        <!-- offsidebar-->
        <aside class="offsidebar hide">
            @Html.Partial("_Offsidebar")
        </aside>
        <!-- Main section-->
        <section>
            <!-- Page content-->
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </section>
        <!-- Page footer-->
        <footer>
            @Html.Partial("_Footer")
        </footer>
    </div>
    @Html.Hidden("hiddenGetNotificationJob", Url.Action("GetNotificationJob", "JsonJob"))
    @if (IsSectionDefined("BodyArea"))
    {@RenderSection("BodyArea", required: false)}
    <!-- =============== VENDOR SCRIPTS ===============-->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/matchMedia")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/storage")
    @Scripts.Render("~/bundles/jqueryEasing")
    @Scripts.Render("~/bundles/animo")
    @Scripts.Render("~/bundles/slimscroll")
    @Scripts.Render("~/bundles/screenfull")
    @Scripts.Render("~/bundles/localize")
    @Scripts.Render("~/bundles/demoRTL")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/Common")
    @Scripts.Render("~/bundles/toastrJs")
    @Scripts.Render("~/bundles/SweetAlert")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/autocomplete")
    @Scripts.Render("~/bundles/Common")
    @Scripts.Render("~/bundles/TopNavbar")
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs" type="text/javascript"></script>
    @*<script src="~/Scripts/AppJs/TopNavbar.js"></script>*@
    <!-- =============== PAGE VENDOR SCRIPTS ===============-->
    @RenderSection("scripts", required: false)
    <!-- =============== APP SCRIPTS ===============-->
    @Scripts.Render("~/bundles/Angle")
    @*<script>

        </script>*@
</body>
</html>