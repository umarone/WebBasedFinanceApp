@model MudasirRehmanAlp.Models.OrganizationDefinition
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime TodayDate = DateTime.Now;
}

<div class="alert alert-warning">
    <em class="fa fa-exclamation-circle fa-lg fa-fw"></em> This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Organization Definition
        <small class="pull-right">  Date: @{@TodayDate}  <i class="fa fa-globe"></i></small>
    </div>
    <div class="panel-body">
        <div class="row ">
            <div class="col-sm-4 ">
                <label>Organization Code: </label>
                <span>@{ @Model.OrganizationUnitCode} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Organization Pin Code: </label>
                <span>@{ @Model.OrganizationPincode} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Organization Name: </label>
                <span> @{ @Model.OrganizationUnitName}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Mobile No: </label>
                <span>@{ @Model.MobileNo} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Contact No: </label>
                <span>@{ @Model.ContactNo} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Fax No: </label>
                <span> @{ @Model.FaxNo}</span>
            </div>
            <div class="col-sm-4 ">
                <label>NTN No: </label>
                <span>@{ @Model.NTN} </span>
            </div>
            <div class="col-sm-4 ">
                <label>GST No: </label>
                <span>@{ @Model.GSTNo} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Email: </label>
                <span> @{ @Model.Email}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Website: </label>
                <span> @{ @Model.Website}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Country Name: </label>
                <span>
                    @{ if (Model.RegionId != null)
                        {
                            @Model.RegionDefinition.CountryDefinition.CountryName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Province Name: </label>
                <span>
                    @{ if (Model.RegionId != null)
                        {
                            @Model.RegionDefinition.ProvinceDefinition.ProvinceName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Region Name: </label>
                <span>
                    @{ if (Model.RegionId != null)
                        {
                            @Model.RegionDefinition.RegionName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>City Name: </label>
                <span>
                    @{ if (Model.CityId != null)
                        {
                            @Model.CityDefinition.CityName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Area Name: </label>
                <span>
                    @{ if (Model.AreaId != null)
                        {
                            @Model.AreaDefinition.AreaName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Address 1: </label>
                <span> @{ @Model.Address1}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Address 2: </label>
                <span> @{ @Model.Address2}</span>
            </div>
            <div class="col-sm-4 ">
                <label>
                    Organization Logo:
                </label>
                <span>
                    @{
                        if (Model.OrganizationLogo != null)
                        {
                            var base64 = Convert.ToBase64String(Model.OrganizationLogo);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <img src='@imgSrc' style="max-width:100px; max-height:100px;" />

                        }
                    }
                </span>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2">
                <label>Status</label>

                <div class="form-group">
                    <label class="radio-inline c-radio">
                        @Html.RadioButton("IsActive", "true", new { @checked = "checked", @type = "radio" })  <span class="fa fa-check"></span> Yes &nbsp; &nbsp; &nbsp;
                    </label>
                    <label class="radio-inline c-radio">
                        @Html.RadioButton("IsActive", "false", new { @type = "radio" }) <span class="fa fa-remove"></span> No
                    </label>
                </div>
            </div>

        </div>
        <div class="row no-print">
            <div class="col-xs-12">
                <a href="@Url.Action("PrintSuperAdmin", "OrganizationDefinitions",new {id=Model.Id })" target="_blank" class="btn btn-info"><i class="fa fa-print"></i> Print</a>

                <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
                    <i class="fa fa-download"></i> Generate PDF
                </button>
                <a href="@Url.Action("IndexSuperAdmin")" title="Back to List" class="btn btn-default">Back to List &nbsp;<em class="fa fa-backward"></em></a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>