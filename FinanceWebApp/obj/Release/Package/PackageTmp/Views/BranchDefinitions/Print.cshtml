@model MudasirRehmanAlp.Models.BranchDefinition
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime TodayDate = DateTime.Now;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>Angle - Bootstrap Admin Template</title>
</head>
<body onload="window.print();">
    <div class="panel panel-default">
        <div class="panel-heading">
            Branch Definition
            <small class="pull-right">  Date: @{@TodayDate}  <i class="fa fa-globe"></i></small>
        </div>
        <div class="panel-body">

            <div class="row ">
                <div class="col-sm-4 ">
                    <label> Code: </label>
                    <span>@{ @Model.Code} </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Name: </label>
                    <span> @{ @Model.Name}</span>
                </div>
                <div class="col-sm-4 ">
                    <label>Title: </label>
                    <span> @{ @Model.Title}</span>
                </div>
                <div class="col-sm-4 ">
                    <label>Mobile No: </label>
                    <span>@{ @Model.MobileNo} </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Contact No: </label>
                    <span>@{ @Model.ContactNo} </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Email: </label>
                    <span> @{ @Model.Email}</span>
                </div>

                <div class="col-sm-4 ">
                    <label>Country Name: </label>
                    <span>
                        @{ if (Model.CountryId != null)
                            {
                                @Model.CountryDefinition.CountryName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Province Name: </label>
                    <span>
                        @{ if (Model.ProvinceId != null)
                            {
                                @Model.ProvinceDefinition.ProvinceName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Region Name: </label>
                    <span>
                        @{ if (Model.RegionId != null)
                            {
                                @Model.RegionDefinition.RegionName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>City Name: </label>
                    <span>
                        @{ if (Model.CityId != null)
                            {
                                @Model.CityDefinition.CityName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Area Name: </label>
                    <span>
                        @{ if (Model.AreaId != null)
                            {
                                @Model.AreaDefinition.AreaName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Address : </label>
                    <span> @{ @Model.Address}</span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label>Status</label>

                    <div class="form-group">
                        <label class="radio-inline c-radio">
                            @Html.RadioButton("IsActive", "true", new { @checked = "checked", @type = "radio" })  <span class="fa fa-check"></span> Yes &nbsp; &nbsp; &nbsp;
                        </label>
                        <label class="radio-inline c-radio">
                            @Html.RadioButton("IsActive", "false", new { @type = "radio" }) <span class="fa fa-remove"></span> No
                        </label>
                    </div>
                </div>
            </div>

        </div>

    </div>

</body>
</html>




