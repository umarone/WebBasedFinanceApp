@model MudasirRehmanAlp.Models.EmployeeOfficialDetails


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="hiddenOfficialId" value="@(ViewBag.OfficialId ?? "0")"/>
  
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Department Name</label>
                    <select id="txtDepartmentNameSelect" class="select2Cls form-control DepartmentSelect">
                        @{
                            if (Model.DepartmentId != null)
                            {
                                <option value="@Model.DepartmentId">@Model.DepartmentDefinition.Name</option>
                            }
                        }
                    </select>
                    @Html.HiddenFor(model => model.DepartmentId, new { @id = "hiddenDepartmentId" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Designation Name</label>
                    <select id="txtDesignationNameSelect" class="select2Cls form-control DesignationSelect">
                        @{
                            if (Model.DesignationId != null)
                            {
                                <option value="@Model.DesignationId">@Model.DesignationDefinition.Name</option>
                            }
                        }
                    </select>
                    @Html.HiddenFor(model => model.DesignationId, new { @id = "hiddenDesignationId" })
                </div>
            </div>
            <div class="col-sm-3">
                <label>Joining Date </label>
                <div class="input-group date datetimepicker">
                    @Html.EditorFor(model => model.JoiningDate, new { htmlAttributes = new { @class = "form-control date form-control-rounded", @id = "txtJoiningDate" } })
                    @Html.ValidationMessageFor(model => model.JoiningDate, "", new { @class = "text-danger" })
                    <span class="input-group-addon">
                        <span class="fa fa-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
}