@model MudasirRehmanAlp.Models.AreaDefinition

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime TodayDate = DateTime.Now;
}
<div class="alert alert-warning">
    <em class="fa fa-exclamation-circle fa-lg fa-fw"></em> This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Area Definition
        <small class="pull-right">  Date: @{@TodayDate}  <i class="fa fa-globe"></i></small>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-4 ">
                <label>Area Code: </label>
                <span>@{ @Model.AreaCode} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Area Name: </label>
                <span> @{ @Model.AreaName}</span>
            </div>
            <div class="col-sm-4 ">
                <label>City Name: </label>
                <span>
                    @{ if (Model.CityId != null)
                        {
                            @Model.CityDefinition.CityName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Region Name: </label>
                <span>
                    @{ if (Model.CityId != null)
                        {
                            @Model.CityDefinition.RegionDefinition.RegionName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Region Name: </label>
                <span>
                    @{ if (Model.CityId != null)
                        {
                            @Model.CityDefinition.RegionDefinition.ProvinceDefinition.ProvinceName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Country Name: </label>
                <span>
                    @{ if (Model.CityId != null)
                        {
                            @Model.CityDefinition.RegionDefinition.CountryDefinition.CountryName
                        }
                    }
                </span>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2">
                <label>Status</label>

                <div class="form-group">
                    <label class="radio-inline c-radio">
                        @Html.RadioButton("IsActive", "true", new { @checked = "checked", @type = "radio" })  <span class="fa fa-check"></span> Yes &nbsp; &nbsp; &nbsp;
                    </label>
                    <label class="radio-inline c-radio">
                        @Html.RadioButton("IsActive", "false", new { @type = "radio" }) <span class="fa fa-remove"></span> No
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <a href="@Url.Action("Print", "AreaDefinitions",new {id=Model.Id })" target="_blank" class="btn btn-info"><i class="fa fa-print"></i> Print</a>

                <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
                    <i class="fa fa-download"></i> Generate PDF
                </button>
                <a href="@Url.Action("Index")" title="Back to List" class="btn btn-default">Back to List &nbsp;<em class="fa fa-backward"></em></a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
