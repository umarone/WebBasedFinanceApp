@model MudasirRehmanAlp.Models.ProductDefinition

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime TodayDate = DateTime.Now;
}
<div class="alert alert-warning">
    <em class="fa fa-exclamation-circle fa-lg fa-fw"></em> This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Product Definition
        <small class="pull-right">  Date: @{@TodayDate}  <i class="fa fa-globe"></i></small>
    </div>
    <div class="panel-body">
        <div class="row ">
            <div class="col-sm-4 ">
                <label>Product Code: </label>
                <span>@{ @Model.ProductCode} </span>
            </div>
            <div class="col-sm-4 ">
                <label>Organization Name: </label>
                <span>
                    @{ if (Model.OrganizationID != null)
                        {
                            @Model.OrganizationDefinition.OrganizationUnitName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Branch Name: </label>
                <span>
                    @{ if (Model.BranchId != null)
                        {
                            @Model.BranchDefinition.Name
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Product Bar Code: </label>
                <span> @{ @Model.ProductBarCode}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Unique Code: </label>
                <span> @{ @Model.UniqueCode}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Product Name: </label>
                <span> @{ @Model.ProductName}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Category Name : </label>
                <span>
                    @{ if (Model.CategoryID != null)
                        {
                            @Model.CategoryDefinition.CategoryName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Manufacture Name : </label>
                <span>
                    @{ if (Model.ManufacturerID != null)
                        {
                            @Model.ManufactureDefinition.ManufactureName
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Colour Name : </label>
                <span>
                    @{ if (Model.ColourId != null)
                        {
                            @Model.Colour.Name
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Model Name : </label>
                <span>
                    @{ if (Model.ModelId != null)
                        {
                            @Model.ProductModel.Name
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Size Name : </label>
                <span>
                    @{ if (Model.SizeId != null)
                        {
                            @Model.SizeDefinition.Name
                        }
                    }
                </span>
            </div>
            <div class="col-sm-4 ">
                <label>Size Specification</label>
                <span> @{ @Model.Specification1}</span>
            </div>

            <div class="col-sm-4 ">
                <label>Main Specification: </label>
                <span> @{ @Model.MainSpecification}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Remarks: </label>
                <span> @{ @Model.Remarks}</span>
            </div>
            <div class="col-sm-4 ">
                <label>Product Image: </label>
                <span>
                    @if (Model.ProductImage != null)
                    {
                        var base64 = Convert.ToBase64String(Model.ProductImage);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
                    }
                </span>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-2">
                <label>Status</label>

                <div class="form-group">
                    <label class="radio-inline c-radio">
                        @Html.RadioButton("IsActive", "true", new { @checked = "checked", @type = "radio" })  <span class="fa fa-check"></span> Yes &nbsp; &nbsp; &nbsp;
                    </label>
                    <label class="radio-inline c-radio">
                        @Html.RadioButton("IsActive", "false", new { @type = "radio" }) <span class="fa fa-remove"></span> No
                    </label>
                </div>
            </div>

        </div>

        <div class="row no-print">
            <div class="col-xs-12">
                <a href="@Url.Action("Print", "ProductDefinitions",new {id=Model.ProductId })" target="_blank" class="btn btn-info"><i class="fa fa-print"></i> Print</a>

                <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
                    <i class="fa fa-download"></i> Generate PDF
                </button>
                <a href="@Url.Action("Index")" title="Back to List" class="btn btn-default">Back to List &nbsp;<em class="fa fa-backward"></em></a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>