@model List<MudasirRehmanAlp.Models.EmployeeExperienceDetails>
@{
    var counter = 0;
    int IsCurrent = 0;
}

<table class="table table-hover">
    <tbody id="tblBody">
        @{
            foreach (var item in Model)
            {
                counter = counter + 1;
                <tr id="@counter">
                    <td>@item.JobTitle</td>
                    <td>@item.CompanyName</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td id="tdExpCityName_@counter">@item.CityDefinition.CityName</td>
                    <td>
                        @{
                            if (item.IsCurrent == true)
                            {
                                IsCurrent = 1;
                                <span>Checked</span>
                            }
                            else
                            {
                                IsCurrent = 0;
                                <span>Un-Checked</span>
                            }
                        }

                    </td>
                    <td>@item.Notes</td>

                    <td>
                        <input type="hidden" id="tdhiddenExpRowStatus_@counter" value="1">
                        <input type="hidden" id="tdhiddenExpJobTitle_@counter" value="@item.JobTitle">
                        <input type="hidden" id="tdhiddenExpCompanyName_@counter" value="@item.CompanyName">
                        <input type="hidden" id="tdhiddenExpCityId_@counter" value="@item.CityId">
                        <input type="hidden" id="tdhiddenExpStartDate_@counter" value="@item.StartDate">
                        <input type="hidden" id="tdhiddenExpEndDate_@counter" value="@item.EndDate">
                        <input type="hidden" id="tdhiddenExpIsCurrent_@counter" value="@IsCurrent">
                        <input type="hidden" id="tdhiddenExpNotes_@counter" value="@item.Notes">
                        <input type="hidden" id="tdhiddenExperienceId_@counter" value="@item.Id">
                        <span title="Edit" class="btn btn-primary btn-sm clsbtnEdit"><emc class="fa fa-edit"></emc> </span>
                        <span title="Delete" class="btn btn-danger btn-sm clsbtnDelete"><emc class="fa fa-remove"></emc></span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<input type="hidden" value="@counter" id="currentExperienceRowID" class="clsCurrentExperienceRowID" />