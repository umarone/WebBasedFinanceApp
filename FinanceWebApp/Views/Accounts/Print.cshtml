@model MudasirRehmanAlp.Models.Account

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime TodayDate = DateTime.Now;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>Angle - Bootstrap Admin Template</title>



</head>
<body onload="window.print();">

    <div class="panel panel-default">
        <div class="panel-heading">
            Chart of Account
            <small class="pull-right">  Date: @{@TodayDate}  <i class="fa fa-globe"></i></small>
        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-sm-3">
                    <label>Organization Name: </label>
                    <span>@{ @Model.OrganizationDefinition.OrganizationUnitName} </span>
                </div>
                <div class="col-sm-3">
                    <label>Branch Name: </label>
                    <span>
                        @{ if (Model.BranchId != null)
                            {
                                @Model.BranchDefinition.Name
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-3">
                    <label>Account Level One</label>
                    <span> @{ @ViewBag.LevelOneName}</span>
                </div>
                <div class="col-sm-3">
                    <label>Account Level Two</label>
                    <span> @{ @ViewBag.LevelTwoName}</span>
                </div>
                <div class="col-sm-3">
                    <label>Account Level Three</label>
                    <span> @{ @ViewBag.LevelThreeName}</span>
                </div>
            </div>
            <div class="row">

                <div class="col-sm-3">
                    <label>Account Type</label>
                    <span>@{ @Model.AccountType} </span>
                </div>
                <div class="col-sm-3">
                    <label>Account No</label>
                    <span>@{ @Model.AccountNo} </span>
                </div>
                <div class="col-sm-3">
                    <label>Account Name</label>
                    <span> @{ @Model.AccountName}</span>
                </div>
                <div class="col-sm-3">
                    <label>Description</label>
                    <span> @{ @Model.Description}</span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label>Status</label>

                    <div class="form-group">
                        <label class="radio-inline c-radio">
                            @Html.RadioButton("IsActive", "true", new { @checked = "checked", @type = "radio" })  <span class="fa fa-check"></span> Yes &nbsp; &nbsp; &nbsp;
                        </label>
                        <label class="radio-inline c-radio">
                            @Html.RadioButton("IsActive", "false", new { @type = "radio" }) <span class="fa fa-remove"></span> No
                        </label>
                    </div>
                </div>

            </div>

        </div>
    </div>



</body>
</html>




