@model MudasirRehmanAlp.Models.CustomerStatement

@{

    DateTime TodayDate = DateTime.Now;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>Angle - Bootstrap Admin Template</title>
</head>
<body onload="window.print();">
    <div class="panel panel-default">
        <div class="panel-heading">
            Customer Statements
            <small class="pull-right">  Date: @{@TodayDate}  <i class="fa fa-globe"></i></small>
        </div>
        <div class="panel-body">
            <div class="row ">
                <div class="col-sm-4 ">
                    <label> Code: </label>
                    <span>@{ @Model.Code} </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Organization Name: </label>
                    <span>
                        @{ if (Model.OrganizationID != null)
                            {
                                @Model.OrganizationDefinition.OrganizationUnitName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Account Name: </label>
                    <span>
                        @{ if (Model.AccountID != null)
                            {
                                var AccountNoAndAccountName = @Model.Account.AccountNo + " - " + @Model.Account.AccountName;
                                <span>@AccountNoAndAccountName</span>
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label> Name: </label>
                    <span> @{ @Model.Name}</span>
                </div>
                <div class="col-sm-4 ">
                    <label>Mobile No: </label>
                    <span>@{ @Model.MobileNo} </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Phone No: </label>
                    <span>@{ @Model.PhoneNo} </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Email: </label>
                    <span> @{ @Model.Email}</span>
                </div>
                <div class="col-sm-4 ">
                    <label>City Name: </label>
                    <span>
                        @{ if (Model.CityId != null)
                            {
                                @Model.CityDefinition.CityName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Area Name: </label>
                    <span>
                        @{ if (Model.AreaId != null)
                            {
                                @Model.AreaDefinition.AreaName
                            }
                        }
                    </span>
                </div>
                <div class="col-sm-4 ">
                    <label>Address : </label>
                    <span> @{ @Model.Address}</span>
                </div>
                <div class="col-sm-4 ">
                    <label> Remarks : </label>
                    <span> @{ @Model.Remarks}</span>
                </div>
                <div class="col-sm-4 ">
                    <label>
                        Image:
                    </label>
                    <span>
                        @{
                            if (Model.Image != null)
                            {
                                var base64 = Convert.ToBase64String(Model.Image);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
                            }
                        }
                    </span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label>Status</label>
                    <div class="form-group">
                        <label class="radio-inline c-radio">
                            @Html.RadioButton("IsActive", "true", new { @checked = "checked", @type = "radio" })  <span class="fa fa-check"></span> Yes &nbsp; &nbsp; &nbsp;
                        </label>
                        <label class="radio-inline c-radio">
                            @Html.RadioButton("IsActive", "false", new { @type = "radio" }) <span class="fa fa-remove"></span> No
                        </label>
                    </div>
                </div>

            </div>

        </div>
        @{
            foreach (var item in ViewBag.GuarantorDefinitionsList as List<MudasirRehmanAlp.Models.GuarantorDefinition>)
            {
                <div class="panel-heading">
                    Guarantor Details
                </div>
                <div class="panel-body">
                    <div class="row ">
                        <div class="col-sm-4 ">
                            <label>Code: </label>
                            <span>@{ @item.Code} </span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>Organization Name: </label>
                            <span>
                                @{ if (Model.OrganizationID != null)
                                    {
                                        @item.OrganizationDefinition.OrganizationUnitName
                                    }
                                }
                            </span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>Name: </label>
                            <span>
                                @{
                                    <span>@item.FirstName</span>
                                }

                            </span>
                        </div>
                        <div class="col-sm-4 ">
                            <label> S/o , W/o : </label>
                            <span> @{ @item.GuardianName}</span>
                        </div>
                        <div class="col-sm-4 ">
                            <label> CNIC No: </label>
                            <span> @{ @item.CNICNo}</span>
                        </div>
                        <div class="col-sm-4 ">
                            <label> Cell No: </label>
                            <span> @{ @item.MobileNo}</span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>Permanent Address: </label>
                            <span>@{ @item.PermanentAddress} </span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>Permanent Ownership: </label>
                            <span>@{ @item.PermanentOwnership.ToString()} </span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>No Of Year: </label>
                            <span> @{ @item.PermanentNoOfYear}</span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>Institutes / Organization: </label>
                            <span> @{ @item.OfficeName}</span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>Designation: </label>
                            <span> @{ @item.DesignationName}</span>
                        </div>
                        <div class="col-sm-4 ">
                            <label>Gross Salary / Income : </label>
                            <span> @{ @item.GrossSalary}</span>
                        </div>
                        <div class="col-sm-4 ">
                            <label> Office Address : </label>
                            <span> @{ @item.OfficeAddress}</span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</body>
</html>




